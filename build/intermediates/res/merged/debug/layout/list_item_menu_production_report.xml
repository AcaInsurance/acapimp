<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    >
    
	<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp" 
        android:padding="10dp"  
        android:paddingTop="10dp" 
        android:background="#55000000"
        >

	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="User ID"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtUserID"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="000000"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout>
	    
	    
	      <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Customer"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4"
	            >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtCustomer"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Name"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6" >
	        </TextView>
	        
	    </LinearLayout>
	    
	      
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="1"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="SPPA No"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold"
	            android:layout_weight="0.4" >
	        </TextView>
	        
	        <TextView
	            android:id="@+id/txtSPPANo"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="000000011111"
	            android:textColor="@color/White"
	            android:textSize="15dp" 
	            android:layout_weight="0.6"  >
	        </TextView>
	        
        </LinearLayout>
        
       <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Policy No"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold" 
	            android:layout_weight="0.4">
	        </TextView>
        
	        <TextView
	            android:id="@+id/txtPolicyNo"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="00-00-00-000"
	            android:textColor="@color/White"
	            android:textSize="16dp" 
	            android:layout_weight="0.6" >
	        </TextView>
        </LinearLayout>
        
       <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Submit Date"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold"
	            android:layout_weight="0.4" >
	        </TextView>
	             
	        <TextView
	            android:id="@+id/txtSubmitDate"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="01/01/2015"
	            android:textColor="@color/White"
	            android:textSize="16dp"  
	            android:layout_weight="0.6">
	        </TextView>
	        
	         
        </LinearLayout>
        
           
       <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        >
	        
	    	<TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Remark"
	            android:textColor="@color/White"
	            android:textSize="15dp"
	            android:textStyle="bold"
	            android:layout_weight="0.4" >
	        </TextView>
	             
	        <TextView
	            android:id="@+id/txtRemark"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="Remark"
	            android:textColor="@color/White"
	            android:textSize="16dp"  
	            android:layout_weight="0.6">
	        </TextView>
	        
	         
        </LinearLayout>
        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
		    android:background="@drawable/buttonpressed"
		    android:visibility="gone"
            android:src="@drawable/syncsppa" />
         
        
 	</LinearLayout>
    
</RelativeLayout>